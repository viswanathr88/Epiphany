<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit">
    <DataTemplate x:Key="FriendFeedItemDataTemplate">
        <Grid Margin="0,2,0,17">
            <Border Grid.Row="0"
                    Background="{StaticResource PhoneBackgroundBrush}"
                    BorderThickness="0,1,0,0"
                    CornerRadius="1"
                    BorderBrush="{StaticResource PhoneContrastBackgroundBrush}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Tap">
                                <i:InvokeCommandAction Command="{Binding ShowProfile}"
                                                       CommandParameter="{Binding User}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="53" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Border BorderThickness="0"
                                Grid.Column="0"
                                Height="48"
                                Width="48"
                                BorderBrush="{StaticResource PhoneAccentBrush}"
                                Background="{StaticResource PhoneChromeBrush}">
                            <Image
                                   Source="{Binding Path=User.ImageUrl}"
                                   Height="48"
                                   Width="48"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                        </Border>
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock Style="{StaticResource PhoneTextNormalStyle}"
                                       Text="{Binding Path=User.Name}"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource PhoneAccentBrush}" />
                            <TextBlock Grid.Row="1"
                                       Text="{Binding UpdateTime, Converter={StaticResource TimeToNowConverter}}"
                                       Style="{StaticResource PhoneTextSubtleStyle}"
                                       Foreground="{StaticResource PhoneSubtleBrush}" />
                        </Grid>                        
                    </Grid>
                    <Grid Grid.Row="1"
                          Margin="10,10,0,5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="{Binding ActionText}"
                                   Style="{StaticResource PhoneTextNormalStyle}"
                                   Foreground="{StaticResource PhoneForegroundBrush}"
                                   TextWrapping="Wrap" />
                        <Grid Grid.Row="1" Margin="12,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Tap">
                                    <i:InvokeCommandAction Command="{Binding ShowProfile}"
                                                           CommandParameter="{Binding Friend}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <Border BorderThickness="0"
                                    Grid.Column="0"
                                    Height="48"
                                    Width="48"
                                    Background="{StaticResource PhoneChromeBrush}">
                                <Image Source="{Binding Path=Friend.ImageUrl}"
                                       Height="48"
                                       Width="48"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                            </Border>
                            <TextBlock Text="{Binding Path=Friend.Name}"
                                       Foreground="{StaticResource PhoneAccentBrush}"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       Grid.Column="1"
                                       Padding="15,0,0,0"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </DataTemplate>
