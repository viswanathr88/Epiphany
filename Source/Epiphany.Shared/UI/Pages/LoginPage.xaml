<local:DataPage x:Class="Epiphany.UI.Pages.LoginPage"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:local="using:Epiphany.UI.Pages"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                mc:Ignorable="d"
                Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                DataContext="{Binding Logon, Source={StaticResource VMLocator}}">
    <Page.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition FromHorizontalOffset="0"
                                     IsStaggeringEnabled="false" />
        </TransitionCollection>

    </Page.Transitions>

    <Grid>
        <ProgressRing IsActive="{Binding IsLoading}"
                      Background="Transparent"/>
        
        <WebView Visibility="{Binding IsWaitingForUserInteraction, Converter={StaticResource VisibilityConverter}, FallbackValue=Collapsed}"
                 Source="{Binding CurrentUri}"
                 NavigationStarting="OnNavigationStarting"
                 NavigationCompleted="OnNavigationCompleted"/>
    </Grid>
</local:DataPage>
