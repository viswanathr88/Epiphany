<ResourceDictionary xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
    
    <!-- Colors -->
    <Color x:Key="ApplicationPageBackgroundThemeColor">#FFF8F8F0</Color>
    <Color x:Key="ApplicationForegroundThemeColor">#DE000000</Color>
    <Color x:Key="TextBoxBackgroundColor">#FFD2D0C3</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="{ThemeResource ApplicationPageBackgroundThemeColor}" />
    <SolidColorBrush x:Key="ApplicationForegroundThemeBrush" Color="{ThemeResource ApplicationForegroundThemeColor}" />
    <SolidColorBrush x:Key="DefaultTextForegroundThemeBrush" Color="{ThemeResource ApplicationForegroundThemeColor}" />
    <SolidColorBrush x:Key="TextBoxBackgroundThemeBrush" Color="{ThemeResource TextBoxBackgroundColor}" />
</ResourceDictionary>