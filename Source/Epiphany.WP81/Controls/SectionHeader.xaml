<UserControl
    x:Class="Epiphany.View.Controls.SectionHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Epiphany.View.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    x:Name="sectionHeaderControl">

    <Border BorderThickness="0,0,0,2"
            BorderBrush="{ThemeResource PhoneMidBrush}"
            HorizontalAlignment="Center">
        <TextBlock Text="{Binding ElementName=sectionHeaderControl, Path=Header}"
                   Foreground="{ThemeResource ApplicationForegroundThemeBrush}"
                   HorizontalAlignment="Center"
                   Style="{StaticResource GroupHeaderTextBlockStyle}"
                   Margin="10,0,10,5" />
    </Border>
</UserControl>
