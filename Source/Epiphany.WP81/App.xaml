<Application x:Class="Epiphany.WP81.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Epiphany.WP81"
             xmlns:strings="using:Epiphany.Strings"
             xmlns:services="using:Epiphany.View.Services"
             xmlns:converters="using:Epiphany.View.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Epiphany.View.Shared/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <strings:LocalizedStrings x:Key="LocalizedStrings" />
            <services:ViewModelLocator x:Key="VMLocator" />

            <!-- Converters -->
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />

        </ResourceDictionary>

    </Application.Resources>


</Application>