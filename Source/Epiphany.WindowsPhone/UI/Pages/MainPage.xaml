        <!-- Content -->
        <Pivot x:Name="ContentPivot"
               Grid.Row="1">
            <PivotItem>
                <TextBlock Text="1" />
            </PivotItem>
            <PivotItem>
                <TextBlock Text="2" />
            </PivotItem>
            <PivotItem>
                <TextBlock Text="3" />
            </PivotItem>
            <PivotItem>
                <TextBlock Text="4" />
            </PivotItem>
        </Pivot>
    </Grid>

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Label="Refresh"
                          Icon="Refresh" />
            <AppBarButton Label="Temp"
                          Icon="Add"
                          IsEnabled="False" />
        </CommandBar>
    </Page.BottomAppBar>
